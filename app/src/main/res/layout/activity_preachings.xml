<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PreachingsActivity"
    android:background="@android:color/white">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">
    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_above="@+id/playerCard"
        android:backgroundTint="@android:color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/playerCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="10dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:backgroundTint="@android:color/white"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/currentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="some long title"/>


            <Button
                android:id="@+id/btnPlay"
                android:layout_below="@id/currentTitle"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:shadowColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:height="50dp"
                android:visibility="gone"
                android:layout_above="@id/seekBar"
                android:drawableTop="@drawable/ic_play_circle_outline_black_24dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/white"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnPause"
                android:visibility="gone"
                android:layout_below="@id/currentTitle"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:shadowColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_above="@id/seekBar"
                android:drawableTop="@drawable/ic_pause_circle_outline_black_24dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/seekBar"
                android:textColor="@android:color/darker_gray"
                android:layout_alignParentEnd="true"
                android:text="1:30"/>

            <TextView
                android:id="@+id/elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/seekBar"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/darker_gray"
                android:text="0:30"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>